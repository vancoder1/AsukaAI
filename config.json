{
    "version": "1.0.0",
    "description": "Configuration file for AI app",
    "recorder": {
        "key": "f8",
        "sample_rate": 44100,
        "channels": 1,
        "chunk": 1024,
        "output_file": "dictate.wav"
    },

    "stt": {
        "model": "distil-small.en"
    },

    "tts": {
        "default_engine": "silero",
        "general_settings": {
            "language": "en",
            "sample_rate": 48000,
            "output_file": "ai_response_tts.wav"
        },
        "engines": {
            "coqui": {
                "input_file": "data/datasets/xtts_voice/input.wav",
                "model": "tts_models/multilingual/multi-dataset/xtts_v2"
            },
            "silero": {
                "model_id": "v3_en",
                "speaker": "en_107"
            }
        }
    }
}